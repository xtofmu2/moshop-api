# Server Configuration
PORT=3000
NODE_ENV=production

# WhatsApp Configuration
MAX_POOLS=3
MAX_USERS_PER_POOL=30
INACTIVE_TIMEOUT=1800000

# Security
API_KEY=your_secure_api_key_here

# Webhooks
WEBHOOK_URL=
WEBHOOK_EVENTS=message,connection,qr

# Paths
SESSION_PATH=./sessions
LOG_PATH=./logs
MEDIA_PATH=./media

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Monitoring
ENABLE_METRICS=true